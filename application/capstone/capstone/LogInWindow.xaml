<Window x:Class="capstone.WinLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capstone"
        mc:Ignorable="d"
        Title="Log In" Height="350" Width="525" ResizeMode="NoResize" Background="White">
    <Grid>
        <TextBox x:Name="txtStaffID" HorizontalAlignment="Left" Height="23" Margin="104,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" BorderBrush="#FF006666"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="373,161,0,0" VerticalAlignment="Top" Width="75" Click="btnSubmit_Click"/>
        <Label x:Name="labStaffID" Content="Staff ID:" HorizontalAlignment="Left" Margin="48,155,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnServer" Content="Server Config" HorizontalAlignment="Left" Margin="434,291,0,0" VerticalAlignment="Top" Width="75" Click="btnServer_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="48,37,0,0" VerticalAlignment="Top" Width="428" Source="MedExpressLogo.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="MedExpressLogo.png"/>
            </Image.OpacityMask>
        </Image>

    </Grid>
</Window>
